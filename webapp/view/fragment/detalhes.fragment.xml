<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:f="sap.ui.layout.form"
   xmlns:core="sap.ui.core" >
   <f:SimpleForm id="SimpleFormDisplay354"
                editable="false"
                layout="ResponsiveGridLayout"
                title="Informações Pessoais"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false" >
   <f:content>
       <Label text="Posição" />
       <Text text="{dados>position}" />
       <Label text="Departamento" />
       <Text text="{dados>department}" />
       <Label text="Email" />
       <Text text="{dados>email}" />
       <Label text="Telefone" />
       <Text text="{dados>phone}" />
   </f:content>
</f:SimpleForm>    


</core:FragmentDefinition>